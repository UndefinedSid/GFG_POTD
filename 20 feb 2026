Problem link --> https://www.geeksforgeeks.org/problems/largest-number-formed-from-an-array1117/1

// C++ code

class Solution {
  public:
  
    static bool compare(const string &a,const string &b){
        return (a + b) > (b + a);
    }
  
    string findLargest(vector<int> &arr) {
        // code here
        string ans="";
        vector<string> temp;
        for(int nums : arr){
            temp.push_back(to_string(nums));
        }
        
        sort(temp.begin(),temp.end(),compare);
        
        for(string str : temp)
        cout << str << " ";
        
        if(temp[0]=="0")
            return "0";
            
        for(string str : temp){
            ans += str;
        }
        
        return ans;
    }
};

// Python code

from functools import cmp_to_key
class Solution:
    def findLargest(self, arr):
        # 1. Convert all integers to strings
        temp = [str(num) for num in arr]
        
        # 2. Define the custom comparison logic
        # Returns 1 if b+a is larger, -1 if a+b is larger
        def compare(a, b):
            if a + b > b + a:
                return -1
            elif a + b < b + a:
                return 1
            else:
                return 0
        
        # 3. Sort using the custom key
        temp.sort(key=cmp_to_key(compare))
        
        # 4. Handle the edge case where the largest number is "0"
        if temp[0] == "0":
            return "0"
            
        # 5. Join and return the result
        return "".join(temp)

